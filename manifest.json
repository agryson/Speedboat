{
  "name": "Speedboat for Hojoki",

  "version": "0.2",



  "description": "A small (unofficial) plugin to quickly view your Hojoki feed via their mobile site.",

  "browser_action": {   "default_icon": "48.png",
	                     "default_popup": "main.html"
  },

  "background": { "page": "bg.html"
  },

  "web_accessible_resources": [ "bg.html",
                                "script.js"
  ],

  "icons": {  "48" : "48.png",
			       "128" : "128.png"
  },

  "permissions": [  "background",
                    "http://*/"
  ]

}